-- Database: Prueba1

-- DROP DATABASE "Prueba1";

CREATE DATABASE "Prueba1"
    WITH 
    OWNER = postgres
    ENCODING = 'UTF8'
    LC_COLLATE = 'Spanish_Spain.1252'
    LC_CTYPE = 'Spanish_Spain.1252'
    TABLESPACE = pg_default
    CONNECTION LIMIT = -1;
    
--Si está usando la terminal de postgresql use \c Prueba1
--Si está usando el cliente web de PostgreSQL (PgAdmin 4), cree un script de la base de datos previamente creada (Prueba1)
-- Posteriormente proceda a crear la siguiente tabla

CREATE TABLE producto(
	id integer,
	nombre text,
	marca text,
	fecha_vencimiento date,
	costo integer,
	unidades integer,
	peso text,
	fecha_venta date,
	PRIMARY KEY(id)
);

